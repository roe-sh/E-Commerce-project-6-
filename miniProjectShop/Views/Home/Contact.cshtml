@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="contact-container my-5">
    <h2 class="text-center mb-4 contact-title">@ViewBag.Title</h2>
    <p class="text-center contact-subtitle">We'd love to hear from you! Whether you have a question about our ducks, need support, or just want to chat, our team is ready to help.</p>

    <div class="row mt-5">
        <!-- Contact Form -->
        <div class="col-md-6 contact-form">
            <h4>Contact Form</h4>
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Name")
                    @Html.TextBox("Name", null, new { @class = "form-control", @placeholder = "Your Name", @required = "required" })
                </div>
                <div class="form-group">
                    @Html.Label("Email")
                    @Html.TextBox("Email", null, new { @class = "form-control", @type = "email", @placeholder = "Your Email", @required = "required" })
                </div>
                <div class="form-group">
                    @Html.Label("Message")
                    @Html.TextArea("Message", null, new { @class = "form-control", @rows = 5, @placeholder = "Your Message", @required = "required" })
                </div>
                <button type="submit" class="btn btn-primary btn-block contact-btn">Send Message</button>
            }
        </div>

        <!-- Contact Details -->
        <div class="col-md-6 contact-details">
            <h4>Contact Details</h4>
            <address>
                <strong>Duck Shop HQ</strong><br />
                123 Quack Street<br />
                Duckville, DU 12345<br />
                <abbr title="Phone">P:</abbr> +1 234 567 890<br />
                <abbr title="Email">E:</abbr> <a href="mailto:support@duckshop.com">support@duckshop.com</a>
            </address>

            <h4>Follow Us</h4>
            <ul class="list-unstyled list-inline contact-social-icons">
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">
                        <span class="icon icon-facebook"></span> Facebook
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">
                        <span class="icon icon-twitter"></span> Twitter
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">
                        <span class="icon icon-instagram"></span> Instagram
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">
                        <span class="icon icon-linkedin"></span> LinkedIn
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Custom Styles Specific to the Contact Page -->
<style>
    /* Container for the Contact Page */
    .contact-container {
        background: #ffffff;
        padding: 50px;
        border-radius: 10px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        margin: auto;
    }

    /* Title and Subtitle */
    .contact-title {
        font-family: 'Poppins', sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffcc00; /* Yellow color for the title */
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 10px;
    }

        .contact-title::after {
            content: '';
            width: 60px;
            height: 4px;
            background-color: #ffcc00; /* Yellow color for the underline */
            display: block;
            margin: 10px auto 0;
            border-radius: 2px;
        }

    .contact-subtitle {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 40px;
    }

    /* Form Styles */
    .contact-form h4 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .contact-form .form-control {
        margin-bottom: 20px;
        border-radius: 30px;
        border: 1px solid #ddd;
        padding: 12px 20px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease-in-out;
    }

        .contact-form .form-control:focus {
            border-color: #ffcc00; /* Yellow color for focus */
            box-shadow: 0px 4px 12px rgba(255, 204, 0, 0.4);
        }

    .contact-btn {
        background: linear-gradient(135deg, #ffcc00, #ffaa00); /* Yellow gradient for the button */
        border: none;
        border-radius: 30px;
        padding: 10px 30px;
        font-size: 1rem;
        text-transform: uppercase;
        transition: background 0.3s ease-in-out;
    }

        .contact-btn:hover {
            background: linear-gradient(135deg, #ffaa00, #ff8800); /* Darker yellow on hover */
        }

    /* Contact Details Styles */
    .contact-details h4 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .contact-details address {
        font-style: normal;
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
        margin-bottom: 30px;
    }

    .contact-details a {
        color: #ffcc00; /* Yellow color for links */
        transition: color 0.3s ease-in-out;
    }

        .contact-details a:hover {
            color: #ffaa00; /* Darker yellow on hover */
        }

    /* Social Icons Styles */
    .contact-social-icons .list-inline-item {
        margin-right: 10px;
    }

    .contact-social-icons .icon {
        font-size: 1.5rem;
        margin-right: 8px;
        color: #555;
        transition: color 0.3s ease-in-out;
    }

        .contact-social-icons .icon:hover {
            color: #ffcc00; /* Yellow color for social icons on hover */
        }
</style>

<!-- Include Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
