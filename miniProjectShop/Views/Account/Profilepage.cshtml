    .profile-header {
        background-color: #fff8dc; /* Light yellow background for header */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .profile-header h2 {
            margin-bottom: 10px;
            color: #ffcc00; /* Yellow color for the title */
        }

        .profile-header img {
            border: 4px solid #ffcc00; /* Yellow border for the profile image */
        }

    .profile-details {
        background-color: #fffbea; /* Slightly darker yellow for details background */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background-color: #ffcc00; /* Yellow background for modal header */
        color: white;
    }

        .modal-header .close {
            color: white;
        }

    .btn-primary {
        background-color: #ffcc00; /* Yellow button color */
        border-color: #ffaa00;
    }

        .btn-primary:hover {
            background-color: #ffaa00; /* Darker yellow on hover */
            border-color: #ff8800;
        }

    .btn-secondary {
        background-color: #cccccc; /* Neutral gray for secondary button */
        border-color: #aaaaaa;
    }
</style>

