@model miniProjectShop.Models.Product

@{
    ViewBag.Title = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">@Model.ProductName</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content("~/images/" + Model.Image)" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2 class="text-black">@Model.ProductName</h2>
                <p>@Model.Description</p>
                <p><strong class="text-primary h4">@Model.Price.ToString("C")</strong></p>

                <div class="mb-5">
                    <form action="@Url.Action("AddToCart", "Home")" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.ProductID" />
                        <div class="input-group mb-3" style="max-width: 120px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" type="button" onclick="decreaseQuantity()">&#8722;</button>
                            </div>
                            <input type="number" name="quantity" id="quantity" class="form-control text-center" value="1" min="1" max="10" aria-label="Quantity" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button" onclick="increaseQuantity()">&#43;</button>
                            </div>
                        </div>
                        <p>
                            <button type="submit" class="buy-now btn btn-sm btn-primary">Add To Cart</button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function increaseQuantity() {
        var quantityInput = document.getElementById("quantity");
        var value = parseInt(quantityInput.value, 10);
        if (value < 10) {
            quantityInput.value = value + 1;
        }
    }

    function decreaseQuantity() {
        var quantityInput = document.getElementById("quantity");
        var value = parseInt(quantityInput.value, 10);
        if (value > 1) {
            quantityInput.value = value - 1;
        }
    }
</script>
